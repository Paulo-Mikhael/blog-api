generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  email String @unique
  password String
  profile UserProfile?
}
model Post {
  id String @id
  title String
  slug String
  cover String?
  content String
  category String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author UserProfile @relation(fields: [authorId], references: [id])
  authorId String
}
model UserProfile {
  id String @id
  name String @unique
  biography String?
  avatar String
  User User @relation(fields: [userId], references: [id])
  userId String @unique
  posts Post[]
}